  <!-- Features -->
  <div class='container'>
    <div class="row">
      <!-- Create -->
      <div class='col-6 pt'>
        <form>
          <h3>Create a new User:</h3>
          <div class="mb-3">
            <label class="form-label" for="username" >Username: (varchar(16), unique, not NULL)</label>
            <input class="form-control" type="text" id="username" name="username">
          </div>

          <div class="mb-3">
            <label class="form-label" for="first_name">First name: (varchar(16), not NULL)</label>
            <input class="form-control" type="text" id="first_name" name="first_name">
          </div>

          <div class="mb-3">
            <label class="form-label" for="last_name">Last name: (varchar(16), not NULL)</label>
            <input class="form-control" type="text" id="last_name" name="last_name">
          </div>

          <div class="mb-3">
            <label class="form-label" for="email">Email: (varchar(32), not NULL)</label>
            <input class="form-control" type="text" id="email" name="email">
          </div>
          
          <button type="button" class="btn btn-primary">Create User</button>
        </form> 
      </div>

      <!-- Delete -->
      <div class='col-6'>
        <form>
          <div class="mb-3">
            <h3>Delete a User:</h3>
          </div>

          <div class="mb-3">
            <label class="form-label" for="username">Username:</label>
            <select class='form-select' required id="username" name="username">
              <option value="" disabled selected hidden>Please Choose...</option>
              <option value='username'>John Doe</option>
            </select>
          </div>

          <div class="mb-3">
            <button type="button" class="btn btn-primary">Delete User</button>
          </div>
        </form> 
      </div>
