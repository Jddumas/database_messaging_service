  <!-- Features -->
  <div class='container'>
    <div class="row">
      <!-- Create -->
      <div class='col-6 pt'>
        <form id='add-message-form-ajax'>
          <h3>Create a new Message:</h3>

          <div class="mb-3">
            <label class="form-label" for="input_username">Username:</label>
            <input class="form-control" type="text" id="input_username" name="input_username" required></input>
          </div>

          <div class="mb-3">
            <label class="form-label" for="input_channel">Channel:</label>
            <input class="form-control" type="text" id="input_channel" name="input_channel" required></input>
          </div>

          <div class="mb-3">
            <label class="form-label" for="input_content">Message Content:</label>
            <textarea class="form-control" type="text" id="input_content" name="input_content" rows="3" required></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label" for="input_time">Time: time (format: HH:MM:SS, military)</label>
            <input class="form-control" type="text" id="input_time" name="input_time" required></input>
          </div>

          <div class="mb-3">
            <label class="form-label" for="input_date">Date: date (format: YYYY-MM-DD)</label>
            <input class="form-control" type="text" id="input_date" name="input_date" required></input>
          </div>
          
          <button type="submit" class="btn btn-primary">Create Message</button>
        </form> 
      </div>

      <!-- Delete -->
      <div class='col-6'>
        <form id='delete-message-form'>
          <div class="mb-3">
            <h3>Delete a Message:</h3>
          </div>

          <div class="mb-3">
            <label class="form-label" for="input_message_id_delete">Message ID:</label>
            <input class="form-control" type="text" id="input_message_id_delete" name="input_message_id_delete" required>
          </div>

          <div class="mb-3">
            <button type="submit" class="btn btn-primary">Delete Message</button>
          </div>
        </form> 
      </div>
    </div>
  </div>  

  <hr>

  <!-- Dynamic Data Table -->
  <div class='container'>
    <div class="row justify-content-center">
      <div class='col-6'>
        <h3 class='text-center'>Messages Data</h3>
        {{!-- Create a table --}}
          <table class="table" id="message-table">
            {{!-- Header section --}}
            <thead>

                {{!-- For just the first row, we print each key of the row object as a header cell so we
                know what each column means when the page renders --}}
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                </tr>
            </thead>

            {{!-- Body section --}}
            <tbody>

                {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
                {{#each data}}
                <tr>
                    <td>{{this.message_id}}</td>
                    <td>{{this.user}}</td>
                    <td>{{this.channel}}</td>
                    <td>{{this.time}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.content}}</td>
                </tr>
                {{/each}}
            </tbody>
          </table>
        {{!-- Create a table --}}

      </div>
    </div>
  </div>





